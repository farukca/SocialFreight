<div id="branches" class="row-fluid">

  <div id="profile-header" class="profile-content row-fluid">
    <div class="span1">
      <%= image_tag("/assets/new_bid.png") %>
    </div>
    <div class="span11">
      <h5><%= t("branches.title.branches") %></h5>
    </div>
  </div>

  <div class="row-fluid">
    <div id="branches_menu" class="span6">
      <legend><%= t "branches.title.branch_process" %></legend>
      <table class="table table-condensed">
        <tr><td><%= link_to t("branches.link.new_branch"), new_branch_path %></td></tr>
        <tr><td></td></tr>
      </table>
    </div>

    <div id="branches_reports" class="span6">
        <legend><%= t "branches.title.branch_reports" %></legend>
        <table class="table table-condensed">
          <tr><td><%= link_to t("branches.link.branch_list"), new_search_path(model: "branch") %></td></tr>
          <tr><td></td></tr>
        </table>
    </div>
  </div>

  <div id="branches_list" class="row-fluid">
    <legend><%= t("branches.title.branches") %></legend>
    <%= render "branches/list", objects: @branches, is_paginated: false %>
  </div>

</div>