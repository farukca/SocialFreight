<div class="slider clearfix row">

  <div class="span6 slider-intro">
    <h1 style="font-size: 20px;"><%= t("web.label.online_logistics_management") %></h1>
    <p style="font-size:16px;line-height:170%;">
      <%= t("web.label.painless_management") %>
    </p>
    <span><%= link_to t("web.link.get_started"), main_app.features_path, :class => "small-btn blue rounded-1" %></span>
    <span class="pull-right">
    <%= link_to t("web.link.try_for_free"), nimbos.new_patron_path, :class => "small-btn blue rounded-1 pull-right" %>
    </span>
  </div>

  <div class="span6 hidden-phone">
    <div id="slider">
      <ul class="slider-images">
        <li><%= link_to image_tag("big_images/slider-img-1.jpg"), road_path %></li>
        <li><%= link_to image_tag("big_images/slider-img-3.jpg"), air_path %></li>
        <li><%= link_to image_tag("big_images/slider-img-2.jpg"), sea_path %></li>
        <li><%= link_to image_tag("big_images/slider-img-4.jpg"), rail_path %></li>
      </ul>
      <ul class="slider-nav clearfix">
        <li><a href="#"><%= t("operations.title.roadoperation") %></a></li>
        <li><a href="#"><%= t("operations.title.airoperation") %></a></li>
        <li><a href="#"><%= t("operations.title.seaoperation") %></a></li>
        <li><a href="#"><%= t("operations.title.railoperation") %></a></li>
      </ul>
    </div>
  </div>

</div>

<div class="row">
  <div class="callout container clearfix">
    <div class="callout-info">
      <%= render "betausers/form" %>
    </div>
  </div>
  <%= render "shared/site_portofilo" %>
</div>

<div class="row hidden-phone">
  <%#= render "shared/site_description" %>
</div>
<script type="text/javascript">document.getElementById('home').classList.add('active');</script>
