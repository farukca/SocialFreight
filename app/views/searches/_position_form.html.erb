<div id="search-form" class="widget">
<%= simple_form_for @search do |f| %>

  <div class="row-fluid">
		<div class="span6">
		  <fieldset>
      <%= f.input :direction do %>
        <%= f.input_field :direction, :as => :select, :collection => Position.direction_types.map { |r| [r[1], r[0] ] }, :class => "input-small" %>
        <%= f.input_field :paid_at, :as => :select, :collection => Position.payment_types.map { |r| [r[1], r[0] ] }, :class => "input-small" %>
      <% end %>
		  </fieldset>
		</div>
		<div class="span6">
		  <fieldset>
      <%= f.input :docdate1, :label => I18n.t("position.#{@search.operation}.label.masterdate") do %>
        <%= f.input_field :docdate1, :as => "string", :class => "input-small", "data-datepicker" => "datepicker" %>
        <%= f.input_field :docdate2, :as => "string", :class => "input-small", "data-datepicker" => "datepicker" %>
        <%= f.button :submit, "Search", :class => 'btn btn-primary' %>
        <%= link_to (image_tag "advanced_search.png"), "#", :class => 'togglebutton', "data-placement" => "below",  "rel" => 'twipsy', "title" => "DetaylÄ± Ara", "data-href" => "#pos_form_details" %>
      <% end %>
      </fieldset>
		</div>
  </div>
  <div id="pos_form_details" class="row-fluid slidingDiv">
    <div class="span6">
      <fieldset>
        <%= f.input :transporter_id %>
      </fieldset>
    </div>
    <div class="span6">
      <fieldset>
        <%= f.input :branch_id, :as => :select, :collection => current_patron.branches %>
      </fieldset>
    </div>
  </div>
  <%= f.input :model, :as => :hidden, :input_html => { :value => "positions" } %>
  <%= f.input :operation, :as => :hidden %>
<% end %>
</div>
